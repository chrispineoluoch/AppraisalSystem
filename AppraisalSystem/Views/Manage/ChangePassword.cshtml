@model AppraisalSystem.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}
<h5 style="position:relative;top:15px;font-weight:normal;">Change Password </h5>
<hr />
<div class="row" style="border:none;text-decoration-color:#293955;margin-bottom:0px;">
    <div class="col-md-12">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-4">
                    <p>
                        @Html.LabelFor(m => m.OldPassword, new { @class = "form-control-sm", style = "font-size:smaller;font-weight:550;position:relative;top:5px;" })
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", style = "border-color:#06080C;resize:both;transform:scale(0.7);position:relative;left:-42px;" })

                        @Html.LabelFor(m => m.NewPassword, new { @class = "form-control-sm", style = "font-size:smaller;font-weight:550;position:relative;top:5px;" })
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", style = "border-color:#06080C;resize:both;transform:scale(0.7);position:relative;left:-42px;" })

                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-control-sm", style = "font-size:smaller;font-weight:550;position:relative;top:5px;" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "border-color:#06080C;resize:both;transform:scale(0.7);position:relative;left:-42px;" })
                    </p>                   
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-0 col-md-4">
                    <input type="submit" value="Save" class="btn btn-primary" style="position:relative;transform:scale(0.7);position:relative;left:-9px;top:-17px;" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
