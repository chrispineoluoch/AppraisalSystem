@model IEnumerable<AppraisalSystem.Models.apraiseeandsupervisorcomments>

@{
    ViewBag.Title = "Supervisor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h4>STAFF EVALUATION FORM: VALUES AND COMPETENCIES</h4>

    @{ int rowNo = 0; }
    <table class="table table-hover table-responsive container" style="word-wrap:break-word;">
        <tr style="border:solid;border-width:thin;background-color:#375A7F;color:white;">
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                SN
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Full Name
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Financial Year
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Discussion Confirmation
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Employee Strengths
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Employee Difficulties
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Apraisal Date
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;"></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="14" style="font-style:italic;"> Click on create new to create a new appraisal comment.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinancialYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscussionConfirmation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeStrengths)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeDifficulties)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppraiseeDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "SuperEdit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </table>
</center>
<style>
    .mycardbutton {
        border: 2px solid #006633 !important;
        background-color: #006633 !important;
        color: white !important;
    }
</style>
