@model IEnumerable<AppraisalSystem.Models.personaldetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h4>STAFF EVALUATION FORM: STAFF PERSONAL DETAILS</h4>

    <p>
        Click on the create new button to create a new record of your personal details. You can edit your personal details at any time once created. 
        &nbsp;&nbsp;&nbsp; <a href="@Url.Action("Create", "PersonalDetails")" class="btn btn-primary mycardbutton">Create New</a>
    </p>

    <table class="table table-hover table-responsive container" style="word-wrap:break-word;">
        <tr style="border:solid;border-width:thin;background-color:#375A7F;color:white;">
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Full Name
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                PF Number
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Designation
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Department
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Nature of Employment
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Staff Category
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;"></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr style="border:solid;border-width:thin;">
                <td colspan="9" style="font-style:italic;"> Click on create new to create a new record of your personal details. You can edit your personal details at any time once created.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PFNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NatureofEmployment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffCategory)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </table>
</center>

<style>
    .mycardbutton {
        border: 2px solid #006633 !important;
        background-color: #006633 !important;
        color: white !important;
    }
</style>

