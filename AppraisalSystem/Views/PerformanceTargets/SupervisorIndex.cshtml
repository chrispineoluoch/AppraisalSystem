@model IEnumerable<AppraisalSystem.Models.performancetargets>

@{
    ViewBag.Title = "Supervisor Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h4>STAFF EVALUATION FORM: PERFORMANCE TARGETS</h4>

    @{ int rowNo = 0; }
    <table class="table table-hover table-responsive container" style="word-wrap:break-word;">
        <tr style="border:solid;border-width:thin;background-color:#375A7F;color:white;">
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                SN
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                PF Number
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Full Name
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Financial Year
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Performance Target Score
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Values and Competencies Score
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Overall Score
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;text-wrap:none;"></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr style="border:solid;border-width:thin;">
                <td colspan="9" style="font-style:italic;"> No records at the moment.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PFNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinancialYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PTTotalScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VCTotalScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OverallScore)
                    </td>
                    <td style="text-wrap:none;">
                        @Html.ActionLink("Review Performance Targets", "SuperEdit", new { id = item.Id, @fullname = item.FullName }, null) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </table>
</center>

<style>
    .mycardbutton {
        border: 2px solid #006633 !important;
        background-color: #006633 !important;
        color: white !important;
    }
</style> 
