@model AppraisalSystem.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="en">

<head>
    <title>Latest Login Form Responsive Widget Template :: w3layouts</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" content="Latest Login Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <link rel="stylesheet" href="~/SmartLogin/css/style.css" type="text/css" media="all" />
    <!-- Style-CSS -->
    <link href="~/SmartLogin/css/font-awesome.min.css" rel="stylesheet">
    <!-- Font-Awesome-Icons-CSS -->
    <!-- //css files -->
    <!-- web-fonts -->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese"
          rel="stylesheet">
    <!-- //web-fonts -->

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content2/css")
    @Styles.Render("~/bundles/sweetalert/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sweetalert/js")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
</head>

<body style="padding:0px !important">
    <div class="main-bg">
        <!-- title -->
        <h1>ICTA ONLINE APPRAISAL SYSTEM</h1>
        <!-- //title -->
        <!-- content -->
        <div class="sub-main-w3">
            <div class="bg-content-w3pvt">
                <div class="top-content-style">
                    <img src="~/SmartLogin/images/user.jpg" alt="" />
                </div>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "margin-bottom: 0px !important;margin-top: 20px !important;" })

                    <form action="#" method="post">
                        <p class="legend">Register<span class="fa fa-sign-in"></span></p>
                        <div class="input">
                            @if (ViewBag.countyList != null)
                            {
                                @Html.DropDownListFor(model => model.CountyId, ViewBag.countyList as SelectList, "Select County", new { @class = "form-control", placeholder = "County" })
                            }
                        </div>
                        <div class="input">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control-lg", placeholder = "First Name" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div class="input">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control-lg", placeholder = "Last Name" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div class="input">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control-lg", placeholder = "User Name" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div class="input">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control-lg", placeholder = "Email Address" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div class="input">
                            @Html.TextBoxFor(m => m.PFNumber, new { @class = "form-control-lg", placeholder = "Personal Number" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div class="input">
                            @Html.DropDownListFor(m => m.RoleName, new List<SelectListItem>()
       {
           new SelectListItem {Text="Admin", Value="Admin" },
           new SelectListItem {Text="User", Value="User" }
       },
        "Select Role", new { @class = "form-control", placeholder = "System Role" })
                        </div>
                        <div class="input">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control-lg", placeholder = "Password" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div class="input">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control-lg", placeholder = "Confirm Password" })
                            <span class="fa fa-unlock"></span>
                        </div>
                        <div>
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>
                        <p>
                            @Html.EditorFor(model => model.County, (""), new { htmlAttributes = new { @class = "form-control-lg", style = "display:none;", id = "txtCountySelected" } })
                        </p>
                    </form>
                    <a href="#" class="bottom-text-w3ls">Login</a>
                }
            </div>
        </div>
        <!-- //content -->
        <!-- copyright -->
        <div class="copyright">
            <h2>
                &copy; All rights reserved
                <a href="https://icta.go.ke" target="_blank">ICT Authority</a>
            </h2>
        </div>
        <!-- //copyright -->
    </div>
</body>

</html>

<style>
    .sub-main-w3 .validation-summary-errors {
        font-size: 13px;
        margin-left: 0px;
        text-align: center;
    }

    .sub-main-w3 .top-content-style {
        background: #ec2028 !important;
    }

    .sub-main-w3 .input span {
        color: #088129;
    }

    .sub-main-w3 .btn-primary {
        background-color: #088129;
        border-color: #088129;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script type="text/javascript"></script>

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#CountyId").change(function () {

                var countyId = $(this).val();

                var countyname = $("#CountyId option:selected").text();
                $("#txtCountySelected").val(countyname);

                debugger
                $.ajax({

                    type: "Post",
                    url: "/dlp_faultydevices/GetSubCountyList?CountyId=" + countyId,
                    contentType: "html",
                    success: function (response) {
                        debugger
                        $("#SubCountyId").empty();
                        $("#SubCountyId").append(response);
                    }
                })
            })
        })
    </script>

}