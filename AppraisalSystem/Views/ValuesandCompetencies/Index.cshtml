@model IEnumerable<AppraisalSystem.Models.valuesandcompetency>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<center>
    <h4>STAFF EVALUATION FORM: VALUES AND COMPETENCIES</h4>

    <p>
        Click on the create new button to appraise another person under your supervision.
        &nbsp;&nbsp;&nbsp; <a href="@Url.Action("Create", "ValuesandCompetencies")" class="btn btn-primary mycardbutton">Create New</a>
    </p>

    @{ int rowNo = 0; }
    <table class="table table-hover table-responsive" style="word-wrap:break-word;">
        <tr style="border:solid;border-width:thin;background-color:#375A7F;color:white;">
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                SN
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                PF Number
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Full Name
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Financial Year
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;">
                Total Score
            </th>
            <th style="border:solid;border-width:thin;color:#dfd7ca;"></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="14" style="font-style:italic;"> Click on create new to create a new record of your performance targets.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PFNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinancialYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalScore)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </table>
</center>

<style>
    .mycardbutton {
        border: 2px solid #006633 !important;
        background-color: #006633 !important;
        color: white !important;
    }
</style>
